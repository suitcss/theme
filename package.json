{
  "name": "suitcss-theme",
  "description": "Example theme for SUIT CSS",
  "version": "0.0.1",
  "style": "theme.css",
  "files": [
    "index.css",
    "lib"
  ],
  "dependencies": {
    "@design/fonts": "^1.0.0",
    "explorys-components-button": "git+ssh://git@github.ibm.com:bdrum/explorys-components-button.git",
    "explorys-components-data-table": "git+ssh://git@github.ibm.com:bdrum/explorys-components-data-table.git",
    "suitcss-base": "git+ssh://git@github.ibm.com:bdrum/base.git",
    "suitcss-components-grid": "git+ssh://git@github.ibm.com:bdrum/components-grid.git",
    "suitcss-utils-offset": "git+ssh://git@github.ibm.com:bdrum/utils-offset.git",
    "suitcss-utils-size": "git+ssh://git@github.ibm.com:bdrum/utils-size.git"
  },
  "devDependencies": {
    "kss": "^3.0.0-beta.14",
    "stylelint": "^7.0.1",
    "stylelint-config-suitcss": "^8.0.0",
    "suitcss-preprocessor": "^2.0.0"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run setup && npm run fonts && npm run preprocess && npm run styleguide",
    "fonts": "node ./node_modules/@design/fonts/index.js",
    "preprocess": "suitcss -c config/preprocess.json index.css build/build.css",
    "setup": "npm install",
    "styleguide": "kss --config ./config/styleguide.json"
  },
  "repository": {
    "type": "git",
    "url": "git://github.ibm.com/bdrum/theme.git"
  },
  "keywords": [
    "browser",
    "css-theme",
    "suitcss",
    "style"
  ]
}
